@import './normalize.css'
@import './reset'


$black = #212121
$white = #FAFAFA
body
	font-size 16px
	
.header
	background-color $black
	color $white
	height 64px
	position fixed
	top 0
	left 0
	width 100%
	z-index 10
	
	&-mobile
		display flex
	&-logo
		order 1
	
	&-btn-nav
		order 2
		border 0
		border-radius 5px
		background-color $black
		
	
	&-menu-navbar
		background-color $black
		
	&-menu-list
		list-style-type none
		height 0
		overflow hidden
		
		&-item
			a
				text-decoration none
		